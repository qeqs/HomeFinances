<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="qeqs.homefinances.mapper.TypeMapper">

  <cache />
  
  <resultMap type="Finance" id="FinanceMap">
    <id property="id" column="id"/>
    <result property="value" column="value"/>
    <result property="date" column="date"/>
    <result property="description" column="description"/>
    <association property="financeType" resultMap="TypeMap"/>
   </resultMap>
    
 <resultMap type="Type" id="TypeMap">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <collection property="financeList" resultMap="FinanceMap"/>   
   </resultMap>

  <select id="selectOne" resultMap="TypeMap">
    SELECT id, name FROM type WHERE id = #{id}
  </select>

  <select id="selectAll" resultMap="TypeMap">
    SELECT * FROM type
  </select>

  <update id="update" parameterType="Type">
    UPDATE type SET 
      name=#{name} 
      WHERE id =#{id}
  </update>

  <insert id="insert" parameterType="Type">
    INSERT into type(name) 
    VALUES(#{name})
  </insert>
  
  <delete id="delete" parameterType="Integer">
      DELETE FROM type WHERE id =#{id}
  </delete>

</mapper>